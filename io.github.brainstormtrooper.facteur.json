{
    "app-id" : "io.github.brainstormtrooper.facteur",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "44",
    "sdk" : "org.gnome.Sdk",
    "command" : "io.github.brainstormtrooper.facteur",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=ssh-auth",
        "--device=dri",
        "--share=network",
        "--filesystem=home:create",
        "--filesystem=xdg-run/gvfsd",
        "--filesystem=xdg-run/dconf",
        "--talk-name=org.freedesktop.secrets",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "/share/gtk-doc",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "facteur",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/brainstormtrooper/facteur/tree/0.13.2"
                }
            ]
        }
    ]
}
