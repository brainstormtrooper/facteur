{
    "app-id" : "com.github.brainstormtrooper.facteur",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "44",
    "branch" : "stable",
    "sdk" : "org.gnome.Sdk",
    "command" : "com.github.brainstormtrooper.facteur",
    "finish-args" : [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--socket=session-bus",
        "--share=network",
        "--filesystem=host",
        "--filesystem=xdg-run/gvfsd",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf",
        "--talk-name=ca.desrt.dconf",
        "--talk-name=org.freedesktop.secrets",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "/share/gtk-doc",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name": "curl",
            "config-opts": [ "--with-openssl" ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/curl/curl/releases/download/curl-8_1_2/curl-8.1.2.tar.gz",
                    "archive-type": "tar-gzip",
                    "sha256": "2e5a9b8fcdc095bdd2f079561f369de71c5eb3b80f00a702fbe9a8b8d9897891"
                }
            ]
        },
        {
            "name" : "facteur",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/brainstormtrooper/facteur"
                }
            ]
        }
    ],
    "build-options" : {
        "env" : {
        }
    }
}
