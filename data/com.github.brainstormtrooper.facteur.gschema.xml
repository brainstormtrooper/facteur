<schemalist gettext-domain="com.github.brainstormtrooper.facteur">
  <schema id="com.github.brainstormtrooper.facteur" path="/com/github/brainstormtrooper/facteur/">
    <key name="force-ipv4" type="b">
      <default>false</default>
      <summary>Force ipv4</summary>
      <description>
        Force using only ipv4 address resolution.
      </description>
    </key>
    <key name="delay" type="i">
      <range min="0" max="5000"/>
      <default>1000</default>
      <summary>Sending delay</summary>
      <description>
        Default wait time in milliseconds between sending emails.
      </description>
    </key>
    <key name="connections" type="s">
      <default>'[]'</default>
      <summary>Saved connections</summary>
      <description>
        List of saved connections (JSON string).
      </description>
    </key>
  </schema>
</schemalist>
